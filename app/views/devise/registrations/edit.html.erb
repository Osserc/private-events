<div class="edit-user white">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div><%= f.label :email %></div>
    <div><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div><%= f.label :password %></div>
    <div><%= f.password_field :password, autocomplete: "new-password", placeholder: "6 characters minimum" %></div>

    <div><%= f.label :password_confirmation %></div>
    <div><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>

    <div><%= f.label :current_password %></div>
    <div><%= f.password_field :current_password, autocomplete: "current-password" %></div>
  
    <div class="actions">
      <%= f.submit "Update", class: "form-btn green",data: { turbo: "false" } %>
    </div>
  <% end %>
  
  <div><%= button_to "Delete", registration_path(resource_name), method: :delete, data: { turbo: "false" } %></div>
  
  <div class="user-actions">
    <button><%= link_to "Home", events_path %></button>
  </div>
</div>
