<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div><%= form.label :title, style: "display: block" %></div>
  <div><%= form.text_field :title %></div>

  <div><%= form.label :location, style: "display: block" %></div>
  <div><%= form.text_field :location %></div>

  <div><%= form.label :date, style: "display: block" %></div>
  <div><%= form.date_field :date %></div>

  <div><%= form.label :description, style: "display: block" %></div>
  <div><%= form.text_area :description, cols: "40", rows:"25" %></div>

  <div class="checkbox">
    <div><%= form.label :private, style: "display: block" %></div>
    <div><%= form.check_box :private %></div>
  </div>

  <div class="checkbox">
    <div><%= form.label :invite_only, style: "display: block" %></div>
    <div><%= form.check_box :invite_only %></div>
  </div>

  <div>
    <%= form.submit "Send", class: "button", data: { turbo: "false" } %>
  </div>
<% end %>